<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <include android:id="@+id/lytHeadBar" layout="@layout/headbar" />
    <include android:id="@+id/lytTitleBar" layout="@layout/titlebar" />
    <ScrollView
    	android:layout_width="match_parent"
	    android:layout_height="match_parent">
		<LinearLayout android:id="@+id/lytDetails"
			android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical" >
				<TextView
						style="@style/directory_detail_item"
						android:id="@+id/txtFullName"
						android:textSize="26sp"
						android:layout_marginTop="3dp"
						android:textColor="@color/list_text"
						android:text="Full N. Name" />
				<ImageView
						android:layout_width="match_parent"
						android:layout_height="1px"
						android:background="@drawable/list_divider"
						android:layout_marginBottom="3dp"
						android:layout_marginTop="3dp"/>
				<TextView
						style="@style/directory_detail_item"
						android:textColor="@color/list_text"
						android:id="@+id/txtJobTitle"
						android:text="Job Title" />
				<TextView
						style="@style/directory_detail_item"
						android:id="@+id/txtDepartment"
						android:text="Department" />
				<TextView
						style="@style/directory_detail_item"
						android:textColor="@color/sub_gray"
						android:id="@+id/txtGroup"
						android:text="Faculty" />
				<ImageView
						android:layout_width="match_parent"
						android:layout_height="1px"
						android:background="@drawable/list_divider"
						android:layout_marginBottom="3dp"
						android:layout_marginTop="3dp"/>
				<TextView
						style="@style/directory_detail_item"
						android:textColor="@color/list_text"
						android:id="@+id/txtOffice"
						android:text="BASIL 010" />
				<TextView
						style="@style/directory_detail_item"
						android:id="@+id/txtPhone"
						android:text="585-385-8016"
						android:autoLink="phone" android:textColorLink="@color/fisher_maroon"/>
				<TextView
						style="@style/directory_detail_item"
						android:id="@+id/txtEmail"
						android:text="jpray@sjfc.edu"
						android:autoLink="email" android:textColorLink="@color/fisher_maroon"/>
	    </LinearLayout>	
	</ScrollView>
</LinearLayout>
