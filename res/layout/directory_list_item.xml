<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/lytItem"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:paddingLeft="10dp"
	android:paddingRight="10dp">
	<LinearLayout android:id="@+id/nameLine"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">
			<TextView
				android:id="@+id/txtLastName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textColor="@color/list_text"
				android:text="lastname" />
			<TextView
				android:id="@+id/nameSpace1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textColor="@color/list_text"
				android:text=", " />
			<TextView
				android:id="@+id/txtFirstName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textColor="@color/list_text"
				android:text="firstname" />
			<TextView
				android:id="@+id/nameSpace2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textColor="@color/list_text"
				android:text=" " />
			<TextView
				android:id="@+id/txtMiddle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textColor="@color/list_text"
				android:text="middle" />	
		</LinearLayout>
	<LinearLayout android:id="@+id/titleLine"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/txtTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:text="title"
			android:ellipsize="marquee"
			android:textColor="@color/sub_gray"
			android:visibility="gone"/>
		<TextView
			android:id="@+id/txtGroup"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:text="title"
			android:ellipsize="marquee"
			android:textColor="@color/sub_gray"/>
		<TextView
			android:id="@+id/txtCommaSpace"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:text=", "
			android:ellipsize="marquee"
			android:textColor="@color/sub_gray"/>
		<TextView
			android:id="@+id/txtDepartment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:text="title"
			android:textColor="@color/sub_gray_dark"
			android:singleLine="true"
			android:ellipsize="end"/>
	</LinearLayout>
</LinearLayout>