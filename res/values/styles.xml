<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="directory_detail_item">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">9dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/sub_gray_dark</item>
	</style>
	<style name="inner_button" parent="android:Widget.Button">
		<item name="android:background">@android:drawable/btn_default</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">21sp</item>
	</style>
	<style name="inner_button_inactive" parent="android:Widget.Button">
		<item name="android:background">@drawable/btn_default_normal_disable</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">21sp</item>
	</style>
</resources>
